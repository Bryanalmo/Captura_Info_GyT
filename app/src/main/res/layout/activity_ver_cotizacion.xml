<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="android.primer.bryanalvarez.captura_info_gt.Activities.VerCotizacionActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="Resumen de cotización"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cliente:"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_nombre_cliente_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE CLIENTE:"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contácto:"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tv_nombre_contacto_resumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOMBRE CONTACTO:"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maquinas cotizadas:"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/listViewMaquinasCotizadas"
        android:layout_width="match_parent"
        android:layout_height="200dp"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtotal:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#9e9d9d"/>
        <TextView
            android:id="@+id/tv_total_cotizar_sin_iva_maquina_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#9e9d9d"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:textColor="#9e9d9d"/>
        <TextView
            android:id="@+id/tv_total_cotizar_iva_maquina_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#9e9d9d"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Total:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_total_cotizar_maquina_resumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_guardar_enviar_cotizacion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Guardar y Reenviar"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"/>

</LinearLayout>
</ScrollView>
