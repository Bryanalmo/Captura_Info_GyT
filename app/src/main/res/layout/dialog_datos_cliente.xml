<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Cargar datos de cliente aÃ±adido"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/ib_dialog_cargar_cliente"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/ic_cargar_datos"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_dialog_nombre_cliente"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre" />

    <EditText
        android:id="@+id/et_dialog_correo_cliente"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo" />

    <EditText
        android:id="@+id/et_dialog_celular_cliente"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Celular" />

    <EditText
        android:id="@+id/et_dialog_ciudad_observaciones"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Observaciones" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interes del cliente"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:id="@+id/tv_interes_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"/>

    </LinearLayout>



    <SeekBar
        android:id="@+id/seekBar_interes_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:max="5"
        android:min="0"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/cb_tratamiento_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Aprobar el tratamiento de datos"/>
    <Button
        android:id="@+id/bt_dialog_enviar_cotizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENVIAR"
        android:textColor="@color/colorAccent"
        android:background="#00ffffff"
        android:layout_marginTop="15dp"
        android:layout_gravity="right"/>
</LinearLayout>


